<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
    
    <import resource="tripleStoreContext.xml"/>    
    
    <bean id="userRepository" class="ca.corefacility.bioinformatics.irida.repositories.sesame.UserSesameRepository">
        <constructor-arg ref="tripleStore" />        
    </bean>  
        
    <bean id="projectRepository" class="ca.corefacility.bioinformatics.irida.repositories.sesame.ProjectSesameRepository">
        <constructor-arg ref="tripleStore" />        
    </bean> 
    
    <bean id="sampleRepository" class="ca.corefacility.bioinformatics.irida.repositories.sesame.SampleSesameRepository">
        <constructor-arg ref="tripleStore" />        
    </bean>
    
    <bean id="sequenceFileRepository" class="ca.corefacility.bioinformatics.irida.repositories.sesame.GenericRepository">
        <constructor-arg ref="tripleStore" />
    </bean>
    
    <beans profile="dev">
        <bean id="exampleData" init-method="addSampleData" class="ca.corefacility.bioinformatics.irida.dao.ExampleDataLoader">
            <constructor-arg ref="userRepository" />
            <constructor-arg ref="projectRepository" />
        </bean>
    </beans>
    
</beans>

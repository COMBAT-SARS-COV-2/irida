<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
    
    <context:property-placeholder location="classpath:ca/corefacility/bioinformatics/irida/config/sesame.properties"/>
    
    <bean id="tripleStore" class="ca.corefacility.bioinformatics.irida.dao.TripleStore">
        <constructor-arg value="${db.uri}"/>
        <constructor-arg value="${db.instance}"/>
        <constructor-arg value="${db.base_uri}"/>
    </bean>
        
    <bean id="userRepository" class="ca.corefacility.bioinformatics.irida.repositories.sesame.UserSesameRepository">
        <constructor-arg ref="tripleStore" />        
    </bean>
    
    <bean id="projectSesameRepository" class="ca.corefacility.bioinformatics.irida.repositories.sesame.ProjectSesameRepository">
        <constructor-arg ref="tripleStore" />        
    </bean> 
    
    <bean id="userService" class="ca.corefacility.bioinformatics.irida.service.impl.CRUDServiceImpl">
        <constructor-arg ref="userRepository" />
        <constructor-arg ref="validator" />
        <constructor-arg>
            <value type="java.lang.Class">ca.corefacility.bioinformatics.irida.model.User</value>
        </constructor-arg>
    </bean>
    
    <bean id="projectService" class="ca.corefacility.bioinformatics.irida.service.impl.ProjectServiceImpl">
        <constructor-arg ref="projectRepository" />
        <constructor-arg ref="userRepository" />
        <constructor-arg ref="sampleRepository" />
        <constructor-arg ref="validator" />
    </bean>
    
    <bean id="sampleService" class="ca.corefacility.bioinformatics.irida.service.impl.SampleServiceImpl">
        <constructor-arg ref="sampleRepository" />
        <constructor-arg ref="validator" />
    </bean>
    
    <bean id="userMemoryRepository" class="ca.corefacility.bioinformatics.irida.repositories.memory.UserMemoryRepository" />
    <bean id="projectRepository" class="ca.corefacility.bioinformatics.irida.repositories.memory.ProjectMemoryRepository" />
    <bean id="sampleRepository" class="ca.corefacility.bioinformatics.irida.repositories.memory.CRUDMemoryRepository">
        <constructor-arg>
            <value type="java.lang.Class">ca.corefacility.bioinformatics.irida.model.Sample</value>
        </constructor-arg>
    </bean>
    
    <!-- validator beans -->
    <bean id="validator"
          class="org.springframework.validation.beanvalidation.LocalValidatorFactoryBean"/>
    <bean class="org.springframework.validation.beanvalidation.MethodValidationPostProcessor"/>
</beans>

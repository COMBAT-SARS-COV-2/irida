<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

	<changeSet id="snapshots" author="tom">

		<!-- Add model snapshot tables -->
		<createTable tableName="project_snapshot">
			<column name="snapshotId" type="bigint(20)" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="id" type="bigint(20)" />
			<column name="name" type="varchar(255)">
				<constraints nullable="false"></constraints>
			</column>
			<column name="organism" type="varchar(255)" />
			<column name="projectDescription" type="longtext" />
			<column name="remoteURL" type="varchar(255)" />
		</createTable>

		<createTable tableName="project_snapshot_AUD">
			<column name="REV" type="int(11)">
				<constraints primaryKey="true" referencedColumnNames="id"
					referencedTableName="Revisions" foreignKeyName="FK_PROJECT_SNAPSHOT_REVISION" />
			</column>
			<column name="REVTYPE" type="tinyint(4)" />
			<column name="snapshotId" type="bigint(20)">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="id" type="bigint(20)" />
			<column name="name" type="varchar(255)" />
			<column name="organism" type="varchar(255)" />
			<column name="projectDescription" type="longtext" />
			<column name="remoteURL" type="varchar(255)" />
		</createTable>

		<createTable tableName="sample_snapshot">
			<column name="snapshotId" type="bigint(20)" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="description" type="longtext" />
			<column name="sampleName" type="varchar(255)">
				<constraints nullable="false"></constraints>
			</column>
			<column name="sequencerSampleId" type="varchar(255)">
				<constraints nullable="false"></constraints>
			</column>
			<column name="collectedBy" type="varchar(255)" />
			<column name="collectionDate" type="datetime" />
			<column name="cultureCollection" type="varchar(255)" />
			<column name="genotype" type="longtext" />
			<column name="geographicLocationName" type="varchar(255)" />
			<column name="isolate" type="varchar(255)" />
			<column name="isolationSource" type="longtext" />
			<column name="latitude" type="varchar(255)" />
			<column name="longitude" type="varchar(255)" />
			<column name="organism" type="varchar(255)" />
			<column name="passageHistory" type="longtext" />
			<column name="pathotype" type="varchar(255)" />
			<column name="serotype" type="varchar(255)" />
			<column name="serovar" type="varchar(255)" />
			<column name="subgroup" type="varchar(255)" />
			<column name="subtype" type="varchar(255)" />
			<column name="host_id" type="bigint(20)" />
			<column name="specimenVoucher" type="varchar(255)" />
			<column name="strain" type="varchar(255)" />
		</createTable>

		<createTable tableName="sample_snapshot_AUD">
			<column name="REV" type="int(11)">
				<constraints primaryKey="true" referencedColumnNames="id"
					referencedTableName="Revisions" foreignKeyName="FK_SAMPLE_SNAPSHOT_REVISION" />
			</column>
			<column name="REVTYPE" type="tinyint(4)" />
			<column name="snapshotId" type="bigint(20)">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="description" type="longtext" />
			<column name="sampleName" type="varchar(255)" />
			<column name="sequencerSampleId" type="varchar(255)" />
			<column name="collectedBy" type="varchar(255)" />
			<column name="collectionDate" type="datetime" />
			<column name="cultureCollection" type="varchar(255)" />
			<column name="genotype" type="longtext" />
			<column name="geographicLocationName" type="varchar(255)" />
			<column name="isolate" type="varchar(255)" />
			<column name="isolationSource" type="longtext" />
			<column name="latitude" type="varchar(255)" />
			<column name="longitude" type="varchar(255)" />
			<column name="organism" type="varchar(255)" />
			<column name="passageHistory" type="longtext" />
			<column name="pathotype" type="varchar(255)" />
			<column name="serotype" type="varchar(255)" />
			<column name="serovar" type="varchar(255)" />
			<column name="subgroup" type="varchar(255)" />
			<column name="subtype" type="varchar(255)" />
			<column name="host_id" type="bigint(20)" />
			<column name="specimenVoucher" type="varchar(255)" />
			<column name="strain" type="varchar(255)" />
		</createTable>

		<createTable tableName="sequence_file_snapshot">
			<column name="snapshotId" type="bigint(20)" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="id" type="bigint(20)" />
			<column name="filePath" type="varchar(255)">
				<constraints nullable="false"></constraints>
			</column>
		</createTable>

		<createTable tableName="sequence_file_snapshot_AUD">
			<column name="REV" type="int(11)">
				<constraints primaryKey="true" referencedColumnNames="id"
					referencedTableName="Revisions" foreignKeyName="FK_SEQUENCE_FILE_SNAPSHOT_REVISION" />
			</column>
			<column name="REVTYPE" type="tinyint(4)" />
			<column name="snapshotId" type="bigint(20)">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="id" type="bigint(20)" />
			<column name="filePath" type="varchar(255)" />
		</createTable>

		<!-- optional properties for sequence file snapshots -->
		<createTable tableName="snapshot_sequence_file_properties">
			<column name="sequence_file_snapshot_id" type="bigint(20)">
				<constraints nullable="false" primaryKey="true"
					foreignKeyName="FK_SEQUENCE_PROPERTIES_SEQUENCE_FILE_SNAPSHOT"
					referencedColumnNames="snapshotId" referencedTableName="sequence_file_snapshot" />
			</column>
			<column name="property_key" type="varchar(255)">
				<constraints nullable="false" primaryKey="true" />
			</column>
			<column name="property_value" type="varchar(255)">
				<constraints nullable="false" />
			</column>
		</createTable>

		<createTable tableName="snapshot_sequence_file_properties_AUD">
			<column name="REV" type="int(11)">
				<constraints primaryKey="true" referencedColumnNames="id"
					referencedTableName="Revisions" foreignKeyName="FK_SEQUENCE_FILE_SNAPSHOT_PROPERTIES_REVISION" />
			</column>
			<column name="REVTYPE" type="tinyint(4)" />
			<column name="sequence_file_snapshot_id" type="bigint(20)">
				<constraints nullable="false" primaryKey="true" />
			</column>
			<column name="property_key" type="varchar(255)">
				<constraints nullable="false" primaryKey="true" />
			</column>
			<column name="property_value" type="varchar(255)">
				<constraints nullable="false" primaryKey="true" />
			</column>
		</createTable>

		<!-- Create the RESTLinks tables -->
		<createTable tableName="rest_links">
			<column name="id" type="bigint(20)">
				<constraints nullable="false" primaryKey="true" />
			</column>
		</createTable>

		<createTable tableName="rest_links_AUD">
			<column name="id" type="bigint(20)">
				<constraints nullable="false" primaryKey="true" />
			</column>
			<column name="REV" type="int(11)">
				<constraints primaryKey="true" referencedColumnNames="id"
					referencedTableName="Revisions" foreignKeyName="FK_REST_LINKS_REVISION" />
			</column>
			<column name="REVTYPE" type="tinyint(4)" />
		</createTable>

		<createTable tableName="rest_links_links">
			<column name="link_id" type="bigint(20)">
				<constraints nullable="false" primaryKey="true"
					referencedTableName="rest_links" referencedColumnNames="id"
					foreignKeyName="FK_REST_LINKS_LINKS" />
			</column>
			<column name="rel" type="varchar(255)">
				<constraints nullable="false" primaryKey="true" />
			</column>
			<column name="href" type="varchar(255)">
				<constraints nullable="false" />
			</column>
		</createTable>

		<createTable tableName="rest_links_links_AUD">
			<column name="link_id" type="bigint(20)">
				<constraints nullable="false" primaryKey="true" />
			</column>
			<column name="REV" type="int(11)">
				<constraints primaryKey="true" referencedColumnNames="id"
					referencedTableName="Revisions" foreignKeyName="FK_REST_LINKS_LINKS_REVISION" />
			</column>
			<column name="REVTYPE" type="tinyint(4)" />
			<column name="rel" type="varchar(255)">
				<constraints nullable="false" primaryKey="true" />
			</column>
			<column name="href" type="varchar(255)">
				<constraints nullable="false" primaryKey="true" />
			</column>
		</createTable>

		<!-- Add remote snapshot objects and links -->
		<createTable tableName="remote_project_snapshot">
			<column name="snapshotId" type="bigint(20)">
				<constraints primaryKey="true" nullable="false"
					foreignKeyName="FK_REMOTE_PROJECT_SNAPSHOT_ID" referencedTableName="project_snapshot"
					referencedColumnNames="snapshotId" />
			</column>
			<column name="links_id" type="bigint(20)">
				<constraints foreignKeyName="FK_REMOTE_PROJECT_SNAPSHOT_LINKS"
					referencedTableName="rest_links" referencedColumnNames="id" />
			</column>
		</createTable>

		<createTable tableName="remote_project_snapshot_AUD">
			<column name="REV" type="int(11)">
				<constraints primaryKey="true" referencedColumnNames="id"
					referencedTableName="Revisions" foreignKeyName="FK_REMOTE_PROJECT_SNAPSHOT_REVISION" />
			</column>
			<column name="snapshotId" type="bigint(20)">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="links_id" type="bigint(20)" />
		</createTable>

		<createTable tableName="remote_sample_snapshot">
			<column name="snapshotId" type="bigint(20)">
				<constraints primaryKey="true" nullable="false"
					foreignKeyName="FK_REMOTE_SAMPLE_SNAPSHOT_ID" referencedTableName="sample_snapshot"
					referencedColumnNames="snapshotId" />
			</column>
			<column name="links_id" type="bigint(20)">
				<constraints foreignKeyName="FK_REMOTE_SAMPLE_SNAPSHOT_LINKS"
					referencedTableName="rest_links" referencedColumnNames="id" />
			</column>
		</createTable>

		<createTable tableName="remote_sample_snapshot_AUD">
			<column name="REV" type="int(11)">
				<constraints primaryKey="true" referencedColumnNames="id"
					referencedTableName="Revisions" foreignKeyName="FK_REMOTE_SAMPLE_SNAPSHOT_REVISION" />
			</column>
			<column name="snapshotId" type="bigint(20)">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="links_id" type="bigint(20)" />
		</createTable>

		<createTable tableName="remote_sequence_file_snapshot">
			<column name="snapshotId" type="bigint(20)">
				<constraints primaryKey="true" nullable="false"
					foreignKeyName="FK_REMOTE_SEQUENCE_FILE_SNAPSHOT_ID"
					referencedTableName="sequence_file_snapshot" referencedColumnNames="snapshotId" />
			</column>
			<column name="links_id" type="bigint(20)">
				<constraints foreignKeyName="FK_REMOTE_SEQUENCE_FILE_SNAPSHOT_LINKS"
					referencedTableName="rest_links" referencedColumnNames="id" />
			</column>
		</createTable>

		<createTable tableName="remote_sequence_file_snapshot_AUD">
			<column name="REV" type="int(11)">
				<constraints primaryKey="true" referencedColumnNames="id"
					referencedTableName="Revisions" foreignKeyName="FK_REMOTE_SEQUENCE_FILE_SNAPSHOT_REVISION" />
			</column>
			<column name="snapshotId" type="bigint(20)">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="links_id" type="bigint(20)" />
		</createTable>

		<!-- Add snapshot container class -->
		<createTable tableName="snapshot">
			<column name="id" type="bigint(20)" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="createdDate" type="datetime" />
			<column name="modifiedDate" type="datetime" />
		</createTable>

		<createTable tableName="snapshot_AUD">
			<column name="REV" type="int(11)">
				<constraints primaryKey="true" referencedColumnNames="id"
					referencedTableName="Revisions" foreignKeyName="FK_SNAPSHOT_REVISION" />
			</column>
			<column name="REVTYPE" type="tinyint(4)" />
			<column name="id" type="bigint(20)">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="createdDate" type="datetime" />
			<column name="modifiedDate" type="datetime" />
		</createTable>

		<!-- Add snapshot model list containers -->
		<createTable tableName="snapshot_project_snapshot">
			<column name="snapshot_id" type="bigint(20)">
				<constraints nullable="false" referencedTableName="snapshot"
					referencedColumnNames="id" foreignKeyName="FK_SNAPSHOT_PROJECT_SNAPSHOT" />
			</column>
			<column name="project_snapshot" type="bigint(20)">
				<constraints nullable="false" primaryKey="true"
					referencedTableName="project_snapshot" referencedColumnNames="snapshotId"
					foreignKeyName="FK_PROJECT_SNAPSHOT_SNAPSHOT" />
			</column>
		</createTable>

		<createTable tableName="snapshot_project_snapshot_AUD">
			<column name="REV" type="int(11)">
				<constraints primaryKey="true" referencedColumnNames="id"
					referencedTableName="Revisions" foreignKeyName="FK_SNAPSHOT_PROJECT_SNAPSHOT_REVISION" />
			</column>
			<column name="REVTYPE" type="tinyint(4)" />
			<column name="snapshot_id" type="bigint(20)">
				<constraints nullable="false" primaryKey="true" />
			</column>
			<column name="project_snapshot" type="bigint(20)">
				<constraints nullable="false" primaryKey="true" />
			</column>
		</createTable>

		<createTable tableName="snapshot_sample_snapshot">
			<column name="snapshot_id" type="bigint(20)">
				<constraints nullable="false" referencedTableName="snapshot"
					referencedColumnNames="id" foreignKeyName="FK_SNAPSHOT_SAMPLE_SNAPSHOT" />
			</column>
			<column name="sample_snapshot" type="bigint(20)">
				<constraints nullable="false" primaryKey="true"
					referencedTableName="sample_snapshot" referencedColumnNames="snapshotId"
					foreignKeyName="FK_SAMPLE_SNAPSHOT_SNAPSHOT" />
			</column>
		</createTable>

		<createTable tableName="snapshot_sample_snapshot_AUD">
			<column name="REV" type="int(11)">
				<constraints primaryKey="true" referencedColumnNames="id"
					referencedTableName="Revisions" foreignKeyName="FK_SNAPSHOT_SAMPLE_SNAPSHOT_REVISION" />
			</column>
			<column name="REVTYPE" type="tinyint(4)" />
			<column name="snapshot_id" type="bigint(20)">
				<constraints nullable="false" primaryKey="true" />
			</column>
			<column name="sample_snapshot" type="bigint(20)">
				<constraints nullable="false" primaryKey="true" />
			</column>
		</createTable>

		<createTable tableName="snapshot_sequence_file_snapshot">
			<column name="snapshot_id" type="bigint(20)">
				<constraints nullable="false" referencedTableName="snapshot"
					referencedColumnNames="id" foreignKeyName="FK_SNAPSHOT_SEQUENCE_FILE_SNAPSHOT" />
			</column>
			<column name="sequence_file_snapshot" type="bigint(20)">
				<constraints nullable="false" primaryKey="true"
					referencedTableName="sample_snapshot" referencedColumnNames="snapshotId"
					foreignKeyName="FK_SEQUENCE_FILE_SNAPSHOT_SNAPSHOT" />
			</column>
		</createTable>

		<createTable tableName="snapshot_sequence_file_snapshot_AUD">
			<column name="REV" type="int(11)">
				<constraints primaryKey="true" referencedColumnNames="id"
					referencedTableName="Revisions" foreignKeyName="FK_SNAPSHOT_SEQUENCE_FILE_SNAPSHOT_REVISION" />
			</column>
			<column name="REVTYPE" type="tinyint(4)" />
			<column name="snapshot_id" type="bigint(20)">
				<constraints nullable="false" primaryKey="true" />

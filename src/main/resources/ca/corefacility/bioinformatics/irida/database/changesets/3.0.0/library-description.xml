<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

	<changeSet id="library-description" author="fbristow">
		<createTable tableName="library_description">
			<column name="id" type="bigint(20)" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="comment" type="longtext" />
			<column name="created_date" type="datetime">
				<constraints nullable="false" />
			</column>
			<column name="layout_type" type="varchar(255)">
				<constraints nullable="false" />
			</column>
			<column name="read_lengths" type="int(11)">
				<constraints nullable="false" />
			</column>
			<column name="modified_date" type="datetime" />
			<column name="source" type="varchar(255)">
				<constraints nullable="false" />
			</column>
			<column name="max_insert_size" type="int(11)">
				<constraints nullable="false" />
			</column>
			<column name="min_insert_size" type="int(11)">
				<constraints nullable="false" />
			</column>
			<column name="mode_insert_size" type="int(11)">
				<constraints nullable="false" />
			</column>
			<column name="protocol" type="longtext">
				<constraints nullable="false" />
			</column>
		</createTable>

		<createTable tableName="library_description_AUD">
			<column name="id" type="bigint(20)">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="REV" type="int(11)">
				<constraints primaryKey="true" nullable="false"
					foreignKeyName="FK_LIBRARY_DESCRIPTION_REVISION"
					referencedColumnNames="id" referencedTableName="Revisions" />
			</column>
			<column name="REVTYPE" type="tinyint(4)" />
			<column name="comment" type="longtext" />
			<column name="created_date" type="datetime" />
			<column name="layout_type" type="varchar(255)" />
			<column name="read_lengths" type="int(11)" />
			<column name="modified_date" type="datetime" />
			<column name="source" type="varchar(255)" />
			<column name="max_insert_size" type="int(11)" />
			<column name="min_insert_size" type="int(11)" />
			<column name="mode_insert_size" type="int(11)" />
			<column name="protocol" type="longtext" />
		</createTable>

		<createTable tableName="project_library_description">
			<column name="id" type="bigint(20)" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="created_date" type="datetime">
				<constraints nullable="false" />
			</column>
			<column name="default_library_description" type="bit(1)">
				<constraints nullable="false" />
			</column>
			<column name="library_description_id" type="bigint(20)">
				<constraints nullable="false" foreignKeyName="FK_PROJECT_LIB_DESC_LIB_DESC"
					referencedTableName="library_description" referencedColumnNames="id" />
			</column>
			<column name="project_id" type="bigint(20)">
				<constraints nullable="false" foreignKeyName="FK_PROJECT_LIB_DESC_PROJECT"
					referencedTableName="project" referencedColumnNames="id" />
			</column>
		</createTable>

		<addUniqueConstraint constraintName="UK_PROJECT_LIBRARY_DESCRIPTION"
			tableName="project_library_description" columnNames="project_id,library_description_id" />

		<createTable tableName="project_library_description_AUD">
			<column name="id" type="bigint(20)">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="REV" type="int(11)">
				<constraints primaryKey="true" nullable="false"
					foreignKeyName="FK_PROJECT_LIB_DESC_REVISION"
					referencedColumnNames="id" referencedTableName="Revisions" />
			</column>
			<column name="REVTYPE" type="tinyint(4)" />
			<column name="created_date" type="datetime" />
			<column name="default_library_description" type="bit(1)" />
			<column name="library_description_id" type="bigint(20)" />
			<column name="project_id" type="bigint(20)" />
		</createTable>

		<addColumn tableName="sequence_file">
			<column name="library_description_id" type="bigint(20)">
				<constraints referencedTableName="library_description"
					referencedColumnNames="id" foreignKeyName="FK_SEQUENCE_FILE_LIBRARY_DESCRIPTION" />
			</column>
		</addColumn>
		<addColumn tableName="sequence_file_AUD">
			<column name="library_description_id" type="bigint(20)" />
		</addColumn>
	</changeSet>
</databaseChangeLog>

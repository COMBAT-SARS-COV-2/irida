<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

	<changeSet id="sample-owner" author="aaron">
	
		<createTable tableName="genome_assembly">
			<column name="id" autoIncrement="true" type="bigint(20)">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="created_date" type="datetime" />

			<column name="file_path" type="varchar(255)">
				<constraints nullable="false" />
			</column>
		</createTable>
		
		<addColumn tableName="sample">
			<column name="genome_assembly_id" type="bigint(20)">
				<constraints referencedColumnNames="id" referencedTableName="genome_assembly"
					foreignKeyName="FK_SAMPLE_GENOME_ASSEMBLY"/>
			</column>
		</addColumn>
		
		<addColumn tableName="sample_AUD">
			<column name="genome_assembly_id" type="bigint(20)" />
		</addColumn>

	</changeSet>
</databaseChangeLog>

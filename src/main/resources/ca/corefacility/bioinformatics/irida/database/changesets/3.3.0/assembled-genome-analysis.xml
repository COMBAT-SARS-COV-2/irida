<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

	<changeSet id="assembled-genome" author="aaron">
		<createTable tableName="assembled_genome_analysis">
			<column name="id" type="bigint(20)" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="assembled_genome_file" type="bigint(20)">
				<constraints nullable="false" unique="true"
					foreignKeyName="FK_ASSEMBLED_GENOME_ANALYSIS_OUTPUT_FILE"
					referencedColumnNames="id" referencedTableName="analysis_output_file" />
			</column>
			<column name="created_date" type="datetime">
				<constraints nullable="false" />
			</column>
		</createTable>
		<addColumn tableName="sequence_file_pair">
			<column name="assembled_genome" type="bigint(20)">
				<constraints unique="true" foreignKeyName="FK_SEQUENCE_FILE_PAIR_ASSEMBLED_GENOME"
					referencedColumnNames="id" referencedTableName="assembled_genome_analysis" />
			</column>
		</addColumn>
		<addColumn tableName="sequence_file_pair_AUD">
			<column name="assembled_genome" type="bigint(20)" />
		</addColumn>
	</changeSet>
</databaseChangeLog>
